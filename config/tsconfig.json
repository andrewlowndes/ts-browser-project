{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "../build/js",
    "sourceMap": true,
    "sourceRoot": "/src",
    "target": "es5",
    "lib": ["dom", "es6"],
    "moduleResolution": "node"
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../src/**/*.spec.ts"
  ]
}
